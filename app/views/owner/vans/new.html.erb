<div class="background-image">
<div class="text-center bg-white border-top p-5 header-add-van">
  <div class="col-md-6 offset-md-3">
    <h1 class="title-add" >Please tell me more about your van.</h1>
  </div>
</div>
  <div class="container form-container">
    <%= simple_form_for [:owner, @van] do |f| %>
      <div class="row mt-2 form-add-van">
        <div class="col-md-6 offset-md-3 input-form">
          <div class=" px-2 my-2 remove-border">
            <%= f.input :title, required: false, input_html: { class: "background-color-add" } %>
          </div>
          <div class=" px-2 my-2 remove-border">
            <%= f.input :description, required: false, input_html: { class: "background-color-add" } %>
          </div>
          <div class=" px-2 my-2 remove-border">
            <%= f.input :price_per_day, required: false, input_html: { class: "background-color-add" } %>
          </div>
          <div class=" px-2 my-2 remove-border">
            <%= f.input :model, required: false, input_html: { class: "background-color-add" } %>
          </div>
          <div class=" px-2 my-2 remove-border">
            <%= f.input :brand, required: false, input_html: { class: "background-color-add" } %>
          </div>
          <div class=" px-2 my-2 remove-border">
            <%= f.input :address, input_html: { class: "background-color-add" } %>
          </div>
          <div class=" px-2 my-2 remove-border smaller-div-input">
            <%= f.input  :picture, label_html: { class: "btn btn-primary input-picture" }, input_html: { class: "input-file" }, label: 'Add Picture' %>
            <%= f.input :picture_cache, as: :hidden %>
          </div>
          <%= f.submit 'Create van', class: 'btn btn-add-van'%>
        </div>
      </div>
    <% end %>
  </div>
</div>
