<div class="van-list">
  <div class="search-container">
    <div class="container">

      <div class="search__bar">
        <%= render 'search-form' %>
      </div>

    </div>
  </div>

  <div class=" container vans-container">
    <% @vans.each do |van| %>
      <div class="van">
        <%= link_to (render 'van-card', van: van), van_path(van, rent: {begin_date: params.dig(:search, :begin_date), end_date: params.dig(:search, :end_date)}) %>
      </div>
    <% end %>
  </div>
</div>
